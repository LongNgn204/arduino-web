{
    "name": "workers",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "wrangler d1 migrations apply arduino-db --local",
        "db:migrate:prod": "wrangler d1 migrations apply arduino-db --remote",
        "seed": "wrangler d1 execute arduino-db --local --file=./src/db/seed.sql",
        "seed:prod": "wrangler d1 execute arduino-db --remote --file=./src/db/seed.sql"
    },
    "dependencies": {
        "hono": "^4.6.0",
        "drizzle-orm": "^0.38.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20241127.0",
        "drizzle-kit": "^0.30.0",
        "wrangler": "^3.99.0",
        "typescript": "^5.3.3"
    }
}